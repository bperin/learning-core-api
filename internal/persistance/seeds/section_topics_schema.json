{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Section Topics",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "sections"
  ],
  "properties": {
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "topic",
          "difficulty",
          "summary"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "topic": {
            "type": "string"
          },
          "difficulty": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "summary": {
            "type": "string"
          }
        }
      }
    }
  }
}
